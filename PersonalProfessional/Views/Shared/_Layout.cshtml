                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="https://twitter.com/mnshoemake">
                            <img src="~/images/icons/header/twitter_icon_white.png" alt="Twitter Profile" height="30" width="30" />
                        </a>
                    </li>
                </ul>
            </nav>
        </nav>
    </header>
    <hr class="header_rule">
    <h1 align="center">@ViewData["Title"] @ViewData["altTitle"]</h1>
    <div class="flex-fill softrule" id="siteDescription">
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer text-center">
        <p>BY ©MICHAEL NHU SHOEMAKE, 2020</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
